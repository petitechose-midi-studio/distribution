{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://petitechose-midi-studio.github.io/distribution/schemas/release-spec.schema.json",
  "title": "MIDI Studio release spec (inputs)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema", "channel", "tag", "repos", "assets", "install_sets"],
  "properties": {
    "schema": {
      "type": "integer",
      "const": 1
    },
    "channel": {
      "type": "string",
      "enum": ["stable", "beta", "nightly"]
    },
    "tag": {
      "type": "string",
      "minLength": 1
    },
    "repos": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "url", "ref", "sha"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "url": { "type": "string", "format": "uri" },
          "ref": { "type": "string", "minLength": 1 },
          "sha": { "type": "string", "pattern": "^[0-9a-f]{40}$" },
          "required_ci_workflow_file": { "type": "string", "minLength": 1 }
        }
      }
    },
    "assets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "kind", "filename"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "kind": {
            "type": "string",
            "enum": ["bundle", "firmware", "bitwig-extension"]
          },
          "os": { "type": "string", "enum": ["windows", "macos", "linux"] },
          "arch": { "type": "string", "enum": ["x86_64", "arm64"] },
          "filename": { "type": "string", "minLength": 1 }
        }
      }
    },
    "install_sets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "assets"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "os": { "type": "string", "enum": ["windows", "macos", "linux"] },
          "arch": { "type": "string", "enum": ["x86_64", "arm64"] },
          "assets": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    "pages": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "demo_url": { "type": "string", "format": "uri" }
      }
    }
  }
}
